<div class="span12">
  <h1>Batches</h1>

  <div class="batches">
    <table class="table">
      <tr>
        <th>ID</th>
        <th>Batch Type</th>
        <th>Creator</th>
        <th>Created at</th>
        <th>Items</th>
        <th>Status</th>
      </tr>
      <% @batches.each do |batch| %>
        <tr>
          <td class="batch_id"><%= link_to batch.id, batch_path(batch.id) %></td>
          <td class="display_name"><%= batch.display_name %></td>
          <td class="creator"><%= batch.creator.display_name %></td>
          <td class="created_at"><%= time_ago_in_words(batch.created_at) %> ago</td>
          <td class="item_count"><%= batch.job_ids.try(&:count) || 0 %></td>
          <td class="status"><%= batch_status_text(batch) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
