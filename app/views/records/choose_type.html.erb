<h1>Create a new record</h1>

<%= bootstrap_form_tag hydra_editor.new_record_path, :method=>:get do |f| %>
  <%= bootstrap_select_tag :type, options_for_select(sorted_object_types), label: "Select an object type" %>
  <%= bootstrap_text_field_tag :pid, '', help_block: 'Leave blank for an auto-generated pid.' %>
  
  <%= bootstrap_actions do %>
    <%= bootstrap_submit_tag 'Next'%>
  <% end %>
<% end %>
