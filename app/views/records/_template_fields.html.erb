<% if @record.respond_to?(:template_title) %>
  <h3 class="non lower">
    Template Metadata
    <small class="pull-right"><span class="error">*</span> indicates required fields</small>
  </h3>
  <div class="well">
    <% f.object.template_title = [''] if f.object[:template_title].empty? %>
    <%= render :partial => "edit_field", :locals => {:f => f, :render_req => true, :key => :template_title } %>
  </div>
<% end %>
