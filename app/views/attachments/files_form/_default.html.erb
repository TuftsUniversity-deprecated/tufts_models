<%= form_for @record, :url=>record_attachment_path(@record, @record.class.original_file_datastreams.first) do |f| %>

  <input class="fileupload" type="file" name="files[<%= @record.class.original_file_datastreams.first%>]" data-exists="<%=!@record.datastreams[@record.class.original_file_datastreams.first].new?%>">
  <div class="file btn">
    <%= @record.datastreams[@record.class.original_file_datastreams.first].new? ? 'Upload' : 'Replace' %>
    <%= @record.class.original_file_datastreams.first%> <i class="icon-upload"></i>
  </div>
  <div id="progress" class="progress progress-striped hidden">
      <div class="bar" style="width: 0%;"></div>
  </div>
<% end %>

